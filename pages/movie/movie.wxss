.movie-page {
  position: relative;
  padding: 0 25rpx;
}

.movie-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 300rpx;
  text-align: center;
  font-size: x-large;
  color: #fff;
  background: #4eeaab;
}

.movie-container {
  position: relative;
  margin-top: 10vh;
  max-height: 90vh;
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  overflow: auto;
}

.movie-item {
  position: relative;
  height: 160rpx;
}

.item-idx {
  position: absolute;
  top: 0;
  left: 25rpx;
  width: 60rpx;
  height: 160rpx;
  line-height: 160rpx;
  color: #454563;
}

.item-name {
  display: block;
  padding-left: 85rpx;
  line-height: 160rpx;
  color: #454563;
}

.item-money {
  position: absolute;
  top: 0;
  right: 25rpx;
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: right;
  color: #ff9400;
}

.movie-item:nth-of-type(odd) {
  background: #f8f6f7;
}